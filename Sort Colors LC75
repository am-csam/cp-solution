class Solution {
public:
    void sortColors(vector<int>& nums) {
        //counting colors in colorCount array
        vector<int> colorCount(3, 0);
        for (int i: nums) {
            ++colorCount[i];
        }

        //filling the nums array
        int index = 0;
        for (int j = 0; j < colorCount.size(); ++j) {
            cout<<j<<" : "<<colorCount[j]<<"\n";
            while (colorCount[j]--) {
                nums[index++] = j;
            }
        }
    }
};
