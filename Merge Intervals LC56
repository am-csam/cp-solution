class Solution {
private:
    static bool compareIntervals(vector<int> i1, vector<int> i2) {
        return i1.front() < i2.front();
    }

public:
    vector<vector<int>> merge(vector<vector<int>>& intervals) {

        vector<vector<int>> mergedIntervals;
        sort(intervals.begin(), intervals.end(), compareIntervals);
        for (vector<int> interval: intervals) {
            if ( mergedIntervals.empty()
                || mergedIntervals.back().back() < interval.front()) {

                mergedIntervals.push_back(interval);
            }
            else {
                mergedIntervals.back().back() = max(mergedIntervals.back().back(), interval.back());
            }
        }
        return mergedIntervals;
    }
};
